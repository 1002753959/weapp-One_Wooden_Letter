page {
    padding: 0;
    margin: 0;
    font-size: 30rpx;
    color: #757575;
    background-color: #eeeeee;
    width: 100%;
    height: 100%ï¼›;
}

.card {
    box-sizing: border-box;
    background-color: #ffffff;
    width: 700rpx;
    min-height: 150rpx;
    border-radius: 4rpx;
    margin: 25rpx;
    padding: 30rpx;
    box-shadow: 2rpx 2rpx 2rpx rgba(0,0,0,0.2);
}

.card-title {
    font-size: 36rpx;
    color: #08e037;
}

.card-time {
    margin-top: 26rpx;
    font-size: 26rpx;
    margin-bottom: 26rpx;
}

.card-content {
    box-sizing: border-box;
    width: 100%;
    font-size: 30rpx;
    line-height: 60rpx;
    word-wrap: break-word;
    word-break: break-all;
}

.card:active {
    background-color: #bdbdbd;
}