.line {
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 25rpx;
    margin-top: 20rpx;
}

.tips,.input {
    width: 100%;
    box-sizing: border-box;
    padding: 0 26rpx;
    color: #282828;
    line-height: 60rpx;
    height: 60rpx;
    font-size: 26rpx;
}

.input {
    font-size: 30rpx;
    line-height: 80rpx;
    height: 80rpx;
    background-color: #ffffff;
}

.button {
    appearance: none;
    box-sizing: border-box;
    width: 700rpx;
    font-size: 30rpx;
    margin: 35rpx 25rpx;
    background-color: #08e037;
    border-radius: 4rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #ffffff;
    border: none;
}

.button::after {
    border: none;
}

.button-hover {
    background-color: #000000;
}